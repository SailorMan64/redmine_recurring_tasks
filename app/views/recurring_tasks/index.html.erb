<h2><%= l(:recurring_tasks) %></h2>
<table class="list">
  <thead>
    <tr>
      <th>#</th><th><%=l(:field_project)%></th><th><%=l(:field_tracker)%></th><th><%=l(:field_subject)%></th><th><%=l(:schedule)%></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= link_to schedule.issue.id, issue_path(schedule.issue) %></td>
        <td><%= link_to schedule.issue.project.name, project_path(schedule.issue.project) %></td>
        <td><%= schedule.issue.tracker.name %></td>
        <td><%= link_to schedule.issue.subject, issue_path(schedule.issue) %></td>
        <td><%= schedule.humanize %></td>
        <td class="buttons">
          <%# --- These links are now correct --- %>
          <%= link_to l(:button_edit), edit_project_recurring_task_path(@project, schedule), class: 'icon icon-edit' %>
          <%= link_to l(:button_delete), project_recurring_task_path(@project, schedule), method: :delete, data: { confirm: l(:text_are_you_sure) }, class: 'icon icon-del' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
